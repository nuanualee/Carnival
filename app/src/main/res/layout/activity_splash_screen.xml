<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_halfhalf"
    android:orientation="vertical"

    tools:context=".Page.SplashScreen.SplashScreenActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/carnivalLogo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/carnival"
            android:layout_marginTop="220dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textCarnival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Carnival"
            android:textColor="@color/boldgrape"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/byMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCarnival"
            android:text="By LEE JI YEE"
            android:textColor="@color/boldgrape"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />
    </RelativeLayout>





</LinearLayout>