<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".Page.Moments.Account">

    <TextView
        android:id="@+id/viewAccount"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_purple"
        android:padding="9dp"
        android:gravity="center"
        android:text="Account"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="365dp"
        android:background="@color/transparent"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />


    <TextView
        android:id="@+id/idUser"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="7dp"
        android:text="   Username"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/viewAccount" />


    <ImageButton
        android:id="@+id/arrowOne"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idUser"
        app:layout_constraintTop_toTopOf="@+id/idUser" />


    <TextView
    android:id="@+id/idEmail"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/light_purple"
    android:padding="7dp"
    android:text="   Email"
    android:textColor="@color/white"
    android:textSize="28dp"
    app:layout_constraintTop_toBottomOf="@id/idUser" />


    <ImageButton
        style="@style/Divider.Horizontal"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idUser" />


    <TextView
        android:id="@+id/idPassword"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/light_purple"
        android:padding="7dp"
        android:text="   Password"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idEmail" />


    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idPassword"
        app:layout_constraintTop_toTopOf="@+id/idPassword" />

    <ImageButton
        style="@style/Divider.Horizontal"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEmail" />



    <TextView
        android:id="@+id/idScreenMode"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="7dp"
        android:text="   Screen Mode"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idPassword" />

    <Switch
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@id/idScreenMode"
        app:layout_constraintTop_toTopOf="@+id/idScreenMode" />




    <TextView
        android:id="@+id/viewSignOut"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:background="@color/light_purple"
        android:padding="9dp"
        android:text="                     Sign Out"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idScreenMode"/>


    <TextView
        android:id="@+id/txt_userNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="USERNAME"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/idUser" />


</androidx.constraintlayout.widget.ConstraintLayout>