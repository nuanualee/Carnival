<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".Page.Moments.Settings">


    <TextView
        android:id="@+id/idSettings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_purple"
        android:gravity="center"
        android:padding="9dp"
        android:text=" Settings"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="365dp"
        android:background="@color/transparent"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />


    <TextView
        android:id="@+id/idAccount"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   Account"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idSettings" />


    <ImageButton
        android:id="@+id/arrowOne"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idAccount"
        app:layout_constraintTop_toTopOf="@+id/idAccount" />




    <TextView
        android:id="@+id/idNotification"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   Notification"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idAccount" />

    <ImageButton
        android:id="@+id/arrowTwo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idNotification"
        app:layout_constraintTop_toTopOf="@+id/idNotification" />


    <TextView
        android:id="@+id/idPrivacy"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   Privacy"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idNotification" />

    <ImageButton
        android:id="@+id/arrowThree"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idPrivacy"
        app:layout_constraintTop_toTopOf="@+id/idPrivacy" />

    <ImageButton
        style="@style/Divider.Horizontal"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idNotification" />







    <TextView
        android:id="@+id/idRate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   Rate Carnival"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idPrivacy" />

    <ImageButton
        android:id="@+id/arrowFour"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idRate"
        app:layout_constraintTop_toTopOf="@+id/idRate" />


    <TextView
        android:id="@+id/idAbout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   About"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idRate" />

    <ImageButton
        android:id="@+id/arrowFive"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idAbout"
        app:layout_constraintTop_toTopOf="@+id/idAbout" />

    <ImageButton
        style="@style/Divider.Horizontal"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idRate" />



    <TextView
        android:id="@+id/idCache"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_purple"
        android:padding="10dp"
        android:text="   Clear cache"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/idAbout" />


    <ImageButton
        android:id="@+id/arrowSix"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@id/idCache"
        app:layout_constraintTop_toTopOf="@+id/idCache" />



</androidx.constraintlayout.widget.ConstraintLayout>